<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="2dp"
    android:animateLayoutChanges="true"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:orientation="vertical"
    android:layout_height="90dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rlIcon"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                >

                <ImageView
                    android:id="@+id/ivIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvNumber"
                    android:layout_margin="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_number"
                    android:gravity="center"
                    android:padding="2dp"
                    android:scaleType="fitCenter"
                    android:textColor="@color/colorMainNumberSample"
                    android:textSize="14dp"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/app_name"
                android:singleLine="true"
                android:textStyle="bold"
                android:textColor="@color/colorMainTextCommunication"
                android:textSize="18dp"/>
                <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/app_name"
                android:singleLine="true"
                android:textColor="@color/colorMainTextCommunication"
                android:textSize="14dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/rlProgressDownload"
                        android:visibility="invisible">

                        <TextView
                            android:id="@+id/tvProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:textSize="8dp"/>

                        <ProgressBar
                            android:id="@+id/pbDownload"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/tvProgress"
                            android:scaleY="1"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rlDownloadErr"
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/ic_warning_white_48dp"
                            android:layout_width="24dp"
                            android:tint="@color/colorWarning"
                            android:scaleType="fitCenter"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_marginLeft="32dp"
                            android:textColor="@color/colorError"
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:text="@string/err_download_file"
                            android:textSize="12dp"
                            android:layout_height="match_parent"/>
                    </RelativeLayout>
                    <TextView
                        android:textColor="@color/colorSuccess"
                        android:text="@string/success_downloaded_file"
                        android:textSize="12dp"
                        android:id="@+id/tvDownloaded"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
