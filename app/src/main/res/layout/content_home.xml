<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorHomeBG"
    android:scrollbars="none"
    android:id="@+id/scrollView"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <GridLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gridLayout"
            android:columnCount="2"
            android:rowCount="6">
            <RelativeLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:background="@color/widgetOrange"
                android:id="@+id/dictionary"
                android:layout_gravity="fill_horizontal">
                <ImageView
                    android:src="@drawable/ic_bee_english"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView1"
                    android:background="@android:color/transparent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Từ Điển"
                    android:textStyle="bold"
                    android:textColor="#ffffebee"
                    android:textAllCaps="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="80dp"
                    android:textSize="34dp" />
                <ImageView
                    android:src="@drawable/ic_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageSearchIcon"
                    android:background="@android:color/transparent"
                    android:layout_marginRight="130dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="60dp" />
                <Button
                    android:id="@+id/btn_dictionary"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:background="?attr/selectableItemBackground" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@color/widgetYellow"
                android:minWidth="25px"
                android:minHeight="25px"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:id="@+id/document"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tài Liệu"
                    android:textStyle="bold"
                    android:textColor="#ffffebee"
                    android:textAllCaps="true"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@color/widgetYellow"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_column="1"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:id="@+id/task"
                android:layout_row="1"
                android:layout_columnWeight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thực Hành"
                    android:textStyle="bold"
                    android:textColor="#ffffebee"
                    android:textAllCaps="true"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:background="@color/widgetLightBlue"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_row="2"
                android:layout_column="0"
                android:gravity="center"
                android:id="@+id/book"
                android:layout_gravity="fill_horizontal"
                android:layout_columnWeight="1">
                <ImageView
                    android:src="@drawable/ic_dashboard_books"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageViewBook"
                    android:background="@android:color/transparent"
                    android:layout_centerInParent="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sách"
                    android:textColor="#ff263238"
                    android:id="@+id/textViewBook"
                    android:layout_below="@+id/imageViewBook"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp" />
                <Button
                    android:id="@+id/btn_book"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:background="?attr/selectableItemBackground" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:background="@color/widgetDarkBlue"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_row="2"
                android:layout_column="1"
                android:gravity="center"
                android:id="@+id/quizz"
                android:layout_gravity="fill_horizontal"
                android:layout_columnWeight="1">
                <ImageView
                    android:src="@drawable/ic_dashboard_quizz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageViewQuizz"
                    android:background="@android:color/transparent"
                    android:layout_centerInParent="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trắc nghiệm"
                    android:textColor="#ff263238"
                    android:id="@+id/textViewQuizz"
                    android:layout_below="@+id/imageViewQuizz"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp" />
                <Button
                    android:id="@+id/btn_quizz"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:background="?attr/selectableItemBackground" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:background="@color/widgetWhite"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_row="3"
                android:layout_column="0"
                android:gravity="center"
                android:id="@+id/document_template"
                android:layout_gravity="fill_horizontal"
                android:layout_columnWeight="1">
                <ImageView
                    android:src="@drawable/ic_dashboard_document_template"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageViewDocumentTemplate"
                    android:background="@android:color/transparent"
                    android:layout_centerInParent="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tài liệu mẫu"
                    android:textColor="#ff263238"
                    android:id="@+id/textViewDocumentTemplate"
                    android:layout_below="@+id/imageViewDocumentTemplate"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp" />
                <Button
                    android:id="@+id/btn_document_template"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:background="?attr/selectableItemBackground" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:background="@color/widgetYellow"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_row="3"
                android:layout_column="1"
                android:gravity="center"
                android:id="@+id/skill"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal">
                <ImageView
                    android:src="@drawable/ic_dashboard_skill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageViewSkill"
                    android:background="@android:color/transparent"
                    android:layout_centerInParent="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kỹ năng"
                    android:textColor="#ff263238"
                    android:id="@+id/textViewSkill"
                    android:layout_below="@+id/imageViewSkill"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp" />
                <Button
                    android:id="@+id/btn_skill"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:background="?attr/selectableItemBackground" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:background="@color/widgetLightBlue"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_row="4"
                android:layout_column="0"
                android:gravity="center"
                android:id="@+id/grammar"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal">
                <ImageView
                    android:src="@drawable/ic_dashboard_grammar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageViewGrammar"
                    android:background="@android:color/transparent"
                    android:layout_centerInParent="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngữ pháp"
                    android:textColor="#ff263238"
                    android:id="@+id/textViewGrammar"
                    android:layout_below="@+id/imageViewGrammar"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp" />
                <Button
                    android:id="@+id/btn_grammar"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:background="?attr/selectableItemBackground" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:background="@color/widgetDarkBlue"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_row="4"
                android:layout_column="1"
                android:gravity="center"
                android:id="@+id/handbook"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal">
                <ImageView
                    android:src="@drawable/ic_dashboard_handbook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageViewHandBook"
                    android:background="@android:color/transparent"
                    android:layout_centerInParent="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sổ tay giao tiếp"
                    android:textColor="#ff263238"
                    android:id="@+id/textViewHandBook"
                    android:layout_below="@+id/imageViewHandBook"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp" />
                <Button
                    android:id="@+id/btn_handbook"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:background="?attr/selectableItemBackground" />
            </RelativeLayout>
            <RelativeLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:background="@color/widgetYellow"
                android:id="@+id/vocabulary"
                android:layout_gravity="fill_horizontal">
                <ImageView
                    android:src="@drawable/ic_dashboard_vocabulary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageViewVocabulary"
                    android:background="@android:color/transparent"
                    android:layout_centerInParent="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Từ vựng"
                    android:textColor="#ff263238"
                    android:id="@+id/textViewVocabulary"
                    android:layout_below="@+id/imageViewVocabulary"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp" />
                <Button
                    android:id="@+id/btn_vocabulary"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:background="?attr/selectableItemBackground" />
            </RelativeLayout>
        </GridLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvUsually"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:background="@color/colorHomeRecent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:id="@+id/ivUp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:padding="8dp"
                android:src="@drawable/ic_keyboard_arrow_up_white_24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_toLeftOf="@+id/ivUp"
                android:gravity="center_vertical"
                android:text="@string/recently"
                android:textColor="@color/white"
                android:textSize="24dp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvRecent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivUp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
