<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/ivDictionaryIcon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="4dp"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/tvDictionaryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ivDictionaryDownload"
        android:layout_toRightOf="@+id/ivDictionaryIcon"
        android:padding="4dp"/>

    <ImageView
        android:id="@+id/ivDictionaryDownload"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="8dp"
        android:src="@drawable/ic_check_circle_white_24dp"
        android:tint="@color/colorSuccess"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
